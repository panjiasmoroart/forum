<div class="row">
  <div class="col-md-8 col-lg-8 mx-auto">
    
    <% if user_signed_in? %>
      <%= link_to "Buat Diskusi", new_forum_thread_path, class: 'btn btn-primary mb-3' %>
    <% end %>

    <% @threads.each do |t| %>
    <div class="thread">
      <h4 class="forum-title"><%= link_to t.title.titleize, forum_thread_path(t) %>
      <% if t.sticky? %> 
        <svg style="color: #607d8b" xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-pin-angle-fill" viewBox="0 0 16 16">
        <path d="M9.828.722a.5.5 0 0 1 .354.146l4.95 4.95a.5.5 0 0 1 0 .707c-.48.48-1.072.588-1.503.588-.177 0-.335-.018-.46-.039l-3.134 3.134a5.927 5.927 0 0 1 .16 1.013c.046.702-.032 1.687-.72 2.375a.5.5 0 0 1-.707 0l-2.829-2.828-3.182 3.182c-.195.195-1.219.902-1.414.707-.195-.195.512-1.22.707-1.414l3.182-3.182-2.828-2.829a.5.5 0 0 1 0-.707c.688-.688 1.673-.767 2.375-.72a5.922 5.922 0 0 1 1.013.16l3.134-3.133a2.772 2.772 0 0 1-.04-.461c0-.43.108-1.022.589-1.503a.5.5 0 0 1 .353-.146z"/>
        </svg>
      <% end %>
      </h4>
      <div class="meta">
        <i class="far fa-calendar-plus"></i>
        <%= I18n.l(t.created_at.to_date) %> oleh <i class="far fa-user"></i> <%= t.user.name  %>
      </div>

      <div class="content">
        <p>
          <%= t.content %>
        </p>
      </div>

      <div class="content-bottom d-flex justify-content-between">
        <div class="action">
          <%= link_to 'Pin It', pinit_forum_thread_path(t), class: 'btn btn-info btn-sm mb-3', method: :put %>
        </div>

        <div class="count">
          <span class="badge badge-pill badge-primary"><%= t.forum_posts_count %></span>  
          obrolan
        </div>
      </div>
    </div>
    <% end %>
  </div> 
</div>